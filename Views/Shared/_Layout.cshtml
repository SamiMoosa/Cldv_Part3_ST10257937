<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ABC Retail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ABCRetail.styles.css" asp-append-version="true" />

    <!-- Inline styles can be moved to your CSS file if preferred -->
    <style>
        /* Apply overall theme colors */
        body {
            background-color: #f5e6e8; /* Light pink background */
            color: #4b2e2e; /* Darker color for text */
        }

        .navbar {
            background-color: #ffe6e6; /* Lighter pink for navbar */
        }

        .navbar-brand, .nav-link {
            color: #4b2e2e !important; /* Darker pink/brown for links */
        }

        .navbar-nav .nav-link.active {
            background-color: #f3c1c6; /* Active link color */
        }

        footer {
            background-color: #f3c1c6; /* Matching footer to navbar active link color */
        }

        .btn-primary {
            background-color: #f5b7b1;
            border-color: #f5b7b1;
        }

            .btn-primary:hover {
                background-color: #e18c8c;
                border-color: #e18c8c;
            }

        .container {
            background-color: #ffffff; /* White container background */
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .form-control {
            border-color: #f3c1c6; /* Form field border color */
        }

            .form-control:focus {
                border-color: #e18c8c;
                box-shadow: none;
            }

        .footer {
            padding: 20px 0;
            text-align: center;
            color: #4b2e2e; /* Footer text color */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ABC Retail</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - ABC Retail - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
